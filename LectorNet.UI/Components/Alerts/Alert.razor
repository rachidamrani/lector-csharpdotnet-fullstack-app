@rendermode InteractiveServer

<div class="modal-container">
    <div class="modal">
        <div class="modal-header">
            <div class="title">
                @if (IsSuccess)
                {
                    <img src="images/ok.svg" alt="success-icon"/>
                }

                @if (!IsSuccess)
                {
                    <img src="images/error.svg" alt="failure-icon"/>
                }
                
                <span class="text-xl font-extrabold my-3">@Title</span>
            </div>
            <img src="images/close-icon.svg" alt="close button" class="close-button" @onclick="CloseModal"/>
        </div>
        <p>@Message</p>
    </div>
</div>


@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    
    [Parameter] public string Message { get; set; } = string.Empty;
    
    [Parameter] public bool IsSuccess { get; set;  }

    [Parameter] public EventCallback CloseModalCallback { get; set; }

    private void CloseModal()
    {
        CloseModalCallback.InvokeAsync();
    }
}